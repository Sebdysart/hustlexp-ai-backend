# HustleXP Backend Environment Variables

# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host/database

# Redis (Upstash)
# REST API (for @upstash/redis client - caching, rate limiting)
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_rest_token
# Direct TCP (for BullMQ/ioredis - job queues)
# Upstash provides both REST and direct TCP endpoints
# For BullMQ, use direct TCP connection string (from Upstash dashboard)
UPSTASH_REDIS_URL=redis://default:your_password@your-endpoint.upstash.io:6379
# Or use separate Redis instance for BullMQ
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Firebase Admin
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=hustlexp-media

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=verify@hustlexp.app

# AI Model API Keys (add at least one)
# Google AI / Gemini (Recommended - FREE tier available, fast, reliable)
GOOGLE_AI_API_KEY=AIzaSy...

# Groq (FREE, FAST)
GROQ_API_KEY=gsk_...

# OpenRouter (Good free tier, multiple models)
OPENROUTER_API_KEY=sk-or-v1-...

# DeepSeek (Cheap, good reasoning)
DEEPSEEK_API_KEY=sk-...

# Alibaba Qwen (fast + cheap)
QWEN_API_KEY=sk-...

# OpenAI (Most reliable, paid)
OPENAI_API_KEY=sk-...

# Analytics / Monitoring
POSTHOG_API_KEY=
SENTRY_DSN=

# Backend Configuration
PORT=5000
NODE_ENV=production
# Comma-separated list, e.g. https://app.hustlexp.com,https://beta.hustlexp.com
ALLOWED_ORIGINS=
